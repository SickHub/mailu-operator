{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex",
    "dockerfile",
    "github-actions",
    "gomod"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update tool versions in Makefile",
      "fileMatch": [
        "^Makefile$"
      ],
      "matchStrings": [
        ".*_VERSION \\??= (?<currentValue>.*?) # (?<datasource>[^:]*?):(?<depName>[^:]*?)\\n"
      ],
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update tool versions in Makefile",
      "fileMatch": [
        "^Makefile$"
      ],
      "matchStrings": [
        ".*_VERSION \\??= (?<currentValue>.*?) # (?<datasource>[^:]*?):(?<depName>[^:]*?):(?<extractVersion>.*?)\\n"
      ],
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update go-version in GitHub Actions",
      "fileMatch": [
        "\\.github/workflows/.*\\.yml$"
      ],
      "matchStrings": [
        ".*go-version: (?<currentValue>.*?) # (?<datasource>.*?):(?<depName>.*?)\\n"
      ]
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "platformAutomerge": true
}
